{% extends '/admin/template.view.twig' %}
{% block navigation %}
    {% include '/admin/navigation.view.twig' with { 'active' : 5 } %}
{% endblock %}
{% block main %}
    {# {% for message in msgs %} #}
    <div class="mt-3">
        <h4 class="color-secondary font-weight-bold">
            Messages
        </h4>
    </div>
    <div class="card">
        <div class="card-header">
            <i class="mr-2" data-feather="mail"></i>
            Tout les message
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Message</th>
                        <th>Information</th>
                    </tr>
                </thead>
                <tbody>
                    {% for message in msgs %}
                        <tr>
                            <td>
                                <strong class="color-secondary">
                                    {{ message.titre }}
                                </strong>
                                le
                                <span class="text-muted">
                                    {{ message.date }}
                                </span>
                                <p class="mt-2">
                                    {{ message.contenu }}
                                </p>
                            </td>
                            <td class="text-muted">
                                <span>{{ message.nom }}</span>
                                <br>
                                <span>{{ message.email }}</span>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
