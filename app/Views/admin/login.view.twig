<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
        <title>Administration</title>
        <script src="/public/js/icon-feather.js"></script>
        <link href="/public/css/bootstrap.css" rel="stylesheet">
        <link href="/public/css/style.css" rel="stylesheet">
        <style>
            span .feather {
                width: 54px;
                height: 54px;
            }
        </style>
    </head>
    <body class="bg-light pt-5">
        <div class="mx-auto card shadow-sm border-0 mt-5" style="width:450px; hieght:800px;">
            <div class="card-body px-5 pt-4">
                {% if flash.getMessage('errors') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ flash.getMessage('errors') | first }}
                        <button aria-label="Close" class="close" data-dismiss="alert" type="button">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endif %}
                <h3 class="text-primary mb-3">Admin login</h3>
                <form action="{{ path_for('admin-login') }}" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" for="">
                                <i data-feather="user" style="width:16px;height:16px"></i>
                            </span>
                        </div>
                        <input class="form-control" placeholder="identifiant" name="i" type="text">
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i data-feather="lock" style="width:16px;height:16px"></i>
                            </span>
                        </div>
                        <input class="form-control" placeholder="mot de pass" name="p" type="password">
                    </div>
                    <div class="form-group mt-5">
                        <button class="btn btn-primary btn-block py-2" type="submit">
                            <i class="mr-2" data-feather="log-in"></i>
                            Se connecter
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <script src="/public/js/jquery-3.3.1.min.js"></script>
        <script src="/public/js/bootstrap.js"></script>
        <script>
            feather.replace()
        </script>
    </body>
</html>
