{% extends "layout.html.twig" %}
{% block titre %} Connection - UTMB {% endblock %}

{% block contenu %}
    <div class="d-flex justify-content-center my-4 my-md-0 mt-md-4 pt-md-4">
        <a href="{{ path_for('home') }}">
            <img src="/public/img/logo-bl.svg" alt="logo" height="92px">
        </a>
    </div>
    <div class="container px-5">
        <div class="mx-md-5 mt-5">
            <div class="card w-75 shadow-sm mx-auto b-top">
                <div class="card-body p-5">
                    <h5 class="card-title">Connection</h5>
                    <h6 class="card-subtitle mb-4 text-muted">vous pouver
                        connecter ici</h6>
                    {% if flash.getMessage('global') %}
                        <div class="alert alert-danger alert-dismissible fade show"
                             role="alert">
                            {{ flash.getMessage('global') | first }}
                            <button type="button" class="close" data-dismiss="alert"
                                    aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                    {% if flash.getMessage('error') %}
                        <div class="alert alert-danger alert-dismissible fade show"
                             role="alert">
                            {{ flash.getMessage('error') | first }}
                            <button type="button" class="close" data-dismiss="alert"
                                    aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endif %}
                    <form action="{{ path_for('connection') }}" method="POST">
                        <div class="form-group my-4">
                            <lable>Votre Email</lable>
                            <input type="email" name="email" id="emailId"
                                   class="form-control">
                            <small id="err-email"></small>
                        </div>
                        <div class="form-group my-4">
                            <lable>Votre mote de pass</lable>
                            <input type="password" name="password"
                                   id="passwordId" class="form-control">
                            <small id="err-pass"></small>
                        </div>
                        <div class="from-group my-4">
                            <div class="d-flex flex-column flex-md-row
                            justify-content-between">
                                <input type="submit" value="Connecter"
                                       class="btn btn-primary">
                                <a class="mt-3" href="{{ path_for('reinitialiser') }}">mot de pass oblier ?</a>
                            </div>
                        </div>
                    </form>
                    <div class="divider text-center mt-5 mb-4">
                        <strong>Pas encore inscrit ?</strong>
                    </div>
                    <a class="btn btn-block btn-outline-primary " href="{{ path_for('inscription') }}"
                       role="button">Incrire
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}